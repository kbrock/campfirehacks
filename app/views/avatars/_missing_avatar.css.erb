/* this block screws up those that are display none (the multi line ones) */
/* hide images for non tweet/text messages */
table.chat tr span.author { background-position: 50px 50px; background-repeat: no-repeat;}
table.chat tr.text_message span.author, table.chat tr.tweet_message span.author { display: block; min-height: 45px; min-width: 80px; background-position: 3px 3px; text-indent: -800em; text-align:left;}

/* generic user image */
table.chat td.person span.author { background-image: url(http://asset0.37img.com/global/missing/avatar.png); }

/* missing participants */
#participants span.name { display: block; min-height: 45px; min-width: 45px; background-position: 3px 3px; text-indent: 5em; text-align:left;}
#participants span.name { background-repeat: no-repeat;}
#participants span.name { background-image: url(http://asset0.37img.com/global/missing/avatar.png); }
