<% @components.each do |comp| -%>
/* <%= comp.display_name %> */
#<%=comp.css_class%> { display:none;}
<% end -%>

<%if @components.detect {|c| c.css_class == 'launchbar'} %>
body.chat.with_launchbar div#Header {top:0px !important}
body.chat.with_launchbar div#Sidebar {top:55px !important}
<% end -%>

/* this block screws up those that are display none (the multi line ones) */
/* hide images for non tweet/text messages */
table.chat tr span.author { background-position: 50px 50px; background-repeat: no-repeat;}
table.chat tr.text_message span.author, table.chat tr.tweet_message span.author { display: block; min-height: 45px; background-position: 3px 3px; text-indent: -800em; text-align:left;}

/* generic user image */
table.chat td.person span.author { background-image: url(http://asset0.37img.com/global/missing/avatar.png); }


<% @avatars.each do |avatar| -%>
/* icon: <%=avatar.username%> */
table.chat tr.user_<%=avatar.campfire%> td.person span.author<%= ", table.chat tr.you td.person span.author" if @me == avatar%> { background-image: url(<%= avatar.image_url%>); }
<% if avatar.important %>
.user_<%= avatar.campfire %> td.body div.body { font-style: italic; font-weight: bold; } 
.user_<%= avatar.campfire %> td.body div.body a { font-weight: normal; }
<% end -%>
<% end -%>
